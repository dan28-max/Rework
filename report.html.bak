    .btn-primary:hover {
        background: linear-gradient(135deg, #2b6cb0 0%, #3182ce 100%);
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(44, 82, 130, 0.15);
    }
    
    .btn-primary:active {
        transform: translateY(1px);
        box-shadow: 0 2px 5px rgba(44, 82, 130, 0.1);
    }
    
    .btn-success {
