            if (!document.body.contains(toastContainer)) {
                document.body.appendChild(toastContainer);
            }
            
            // Create toast element
            const toastElement = document.createElement('div');
            toastElement.className = `toast ${type}`;
            
            // Set icon based on type
            let icon = 'ℹ️';
            switch(type) {
                case 'success':
                    icon = '✓';
                    break;
                case 'error':
                    icon = '✕';
                    break;
                case 'warning':
                    icon = '⚠️';
                    break;
                case 'info':
                default:
                    icon = 'ℹ️';
            }
            
            // Set toast content
            toastElement.innerHTML = `
                <div class="toast-icon">${icon}</div>
                <div class="toast-message">${message}</div>
                <button class="toast-close">×</button>
            `;
            
            // Add to container and show
            toastContainer.appendChild(toastElement);
            
            // Auto remove after delay
            const autoRemove = setTimeout(() => {
                if (toastElement && toastElement.parentNode) {
                    toastElement.remove();
                }
                // Remove container if no more toasts
                if (toastContainer.children.length === 0) {
                    toastContainer.remove();
                }
            }, 5000);
            
            // Close on button click
            const closeBtn = toastElement.querySelector('.toast-close');
            closeBtn.addEventListener('click', () => {
                clearTimeout(autoRemove);
                if (toastElement && toastElement.parentNode) {
                    toastElement.remove();
                    
                    // Remove container if no more toasts
                    if (toastContainer && toastContainer.children.length === 0) {
                        toastContainer.remove();
                    }
                }
            });
            
            return toastElement;
        }
        
        // Function to get table ID from URL
        function getTableFromUrl() {
            const urlParams = new URLSearchParams(window.location.search);
            const tableId = urlParams.get('table');
            return tableId || 'graduatesdata';
        }

        // Function to fetch table data from the server
        async function fetchTableData(tableId) {
            try {
                console.log('Fetching data for table:', tableId);
                const response = await fetch(`api/getTableData.php?table=${tableId}`);
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                const data = await response.json();
                
                if (data.success && data.data) {
                    console.log('Data received:', data.data);
                    return data.data;
                } else {
                    console.warn('No data received from server');
                    return [];
                }
            } catch (error) {
                console.error('Error fetching table data:', error);
                return [];
            }
        }

        // Function to load and display the correct table
        async function loadAssignedTable() {
            let tableId = getTableFromUrl();
            console.log('Loading table:', tableId);
            
            // Debug: Log available table definitions
            console.log('Available tables:', Object.keys(tableDefinitions));
            
            // If no tableId in URL or invalid tableId, use the first available table as default
            if (!tableId || !tableDefinitions[tableId]) {
                tableId = Object.keys(tableDefinitions)[0]; // Get first table
                console.log('No valid table in URL, using default:', tableId);
                // Update URL without page reload
                const newUrl = window.location.pathname + (window.location.search ? '' : '?') + 
                             (window.location.search ? '&' : '?') + 'table=' + tableId;
                window.history.replaceState({ path: newUrl }, '', newUrl);
            }
            
            // Ensure the table exists in the definitions
            if (!tableDefinitions[tableId]) {
                console.error('Table not found in definitions:', tableId);
                const container = document.getElementById('tablesContainer');
                if (container) {
                    container.innerHTML = `
                        <div class="error-message">
                            <i class="fas fa-exclamation-triangle"></i>
                            <p>Error: Table configuration not found for "${tableId}"</p>
                        </div>
                    `;
                }
                return;
            }
            
            // Show loading state
            const container = document.getElementById('tablesContainer');
            if (container) {
                container.innerHTML = `
                    <div class="loading-message">
                        <i class="fas fa-spinner fa-spin"></i>
                        <p>Loading data, please wait...</p>
                    </div>
                `;
            }
            
            try {
                // Initialize the table if it doesn't exist
                if (!tables[tableId]) {
                    tables[tableId] = {
                        columns: tableDefinitions[tableId].columns,
                        data: [],
                        displayName: tableDefinitions[tableId].displayName
                    };
                }
                
                // Fetch data from the server
                const tableData = await fetchTableData(tableId);
                
                // Update the table data
                if (tableData && Array.isArray(tableData)) {
                    tables[tableId].data = tableData;
                    console.log(`Loaded ${tableData.length} rows for table ${tableId}`);
                } else {
                    console.warn('No valid data received for table:', tableId);
                    tables[tableId].data = [];
                }
                
                // Show the table with the loaded data
                showTable(tableId);
                
            } catch (error) {
                console.error('Error loading table data:', error);
                if (container) {
                    container.innerHTML = `
                        <div class="error-message">
                            <i class="fas fa-exclamation-triangle"></i>
                            <p>Error loading data. Please try again later.</p>
                            <p>${error.message}</p>
                        </div>
                    `;
                }
            }
        }
        
        // Function to load table data
        function loadTableData(tableId, tbody) {
            try {
                if (!tbody) {
                    console.error('Table body element not found');
                    return;
                }
                
                // Clear loading message
                tbody.innerHTML = '';
                
                const table = tables[tableId];
                if (!table) {
                    console.error('Table not found in tables object:', tableId);
                    tbody.innerHTML = `
                        <tr>
                            <td colspan="10" style="text-align: center; padding: 20px; color: red;">
                                Error: Table configuration not found
                            </td>
                        </tr>
                    `;
                    return;
                }
                
                if (!table.data || table.data.length === 0) {
                    tbody.innerHTML = `
                        <tr>
                            <td colspan="${table.columns.length}" style="text-align: center; padding: 20px;">
                                No data available. Click 'Add Row' to add new data.
                            </td>
                        </tr>
                    `;
                    return;
                }
                
                // Add data rows
                table.data.forEach((rowData, rowIndex) => {
                    const row = document.createElement('tr');
                    
                    // Add data cells (skip ID column and any automatic numbering)
                    table.columns.forEach((column, colIndex) => {
                        // Skip ID column and any column that might be used for numbering
                        if (column.toLowerCase() === 'id' || column.toLowerCase() === 'no' || column === '#') return;
                        
                        const cell = document.createElement('td');
                        const value = rowData[column] || '';
                        
                        // Make cell editable with appropriate input type
                        const colName = column.toLowerCase();
                        
                        if (colName === 'campus') {
                            const campuses = ['Alangilan', 'Nasugbo', 'Balayan', 'Malvar', 'Lemery', 'Lipa', 'Lobo', 'Mabini', 'Pablo Borbon', 'Rosario', 'San Juan'];
                            cell.innerHTML = `
                                <select class="editable-select" data-row="${rowIndex}" data-col="${column}">
                                    <option value="">-- Select --</option>
                                    ${campuses.map(c => 
                                        `<option value="${c}" ${value === c ? 'selected' : ''}>${c}</option>`
                                    ).join('')}
                                </select>
                            `;
                        } 
                        else if (colName === 'sex' || colName === 'gender') {
                            cell.innerHTML = `
                                <select class="editable-select" data-row="${rowIndex}" data-col="${column}">
                                    <option value="">-- Select --</option>
                                    <option value="Male" ${value === 'Male' ? 'selected' : ''}>Male</option>
                                    <option value="Female" ${value === 'Female' ? 'selected' : ''}>Female</option>
                                    <option value="Other" ${value === 'Other' ? 'selected' : ''}>Other</option>
                                </select>
                            `;
                        }
                        else {
                            const isNumber = ['amount', 'quantity', 'count', 'number', 'total', 'students', 'faculty', 'staff', 'visitors', 'cost', 'price', 'qty', 'weight', 'volume'].some(term => 
                                colName.includes(term));
                            const inputType = isNumber ? 'number' : 'text';
                            const inputStep = isNumber ? 'step="0.01"' : '';
                            
                            cell.innerHTML = `
                                <input type="${inputType}" 
                                       class="editable-input" 
                                       value="${value}" 
                                       data-row="${rowIndex}" 
                                       data-col="${column}"
                                       ${inputStep}>
                            `;
                        }
                        
                        row.appendChild(cell);
                    });
                    
                    // Add action buttons
                    const actionCell = document.createElement('td');
                    actionCell.className = 'actions';
                    
                    const saveBtn = document.createElement('button');
                    saveBtn.className = 'btn-save';
                    saveBtn.innerHTML = '<i class="fas fa-save"></i>';
                    saveBtn.title = 'Save';
                    saveBtn.onclick = () => saveRowFromInline(tableId, rowIndex);
                    
                    const deleteBtn = document.createElement('button');
                    deleteBtn.className = 'btn-delete';
                    deleteBtn.innerHTML = '<i class="fas fa-trash"></i>';
                    deleteBtn.title = 'Delete';
                    deleteBtn.onclick = () => {
                        if (confirm('Are you sure you want to delete this row?')) {
                            deleteRow(tableId, rowIndex);
                        }
                    };
                    
                    actionCell.appendChild(saveBtn);
                    actionCell.appendChild(deleteBtn);
                    row.appendChild(actionCell);
                    
                    tbody.appendChild(row);
                });
                
                // Add event listeners for inline editing
                addInlineEditListeners(tableId);
                
            } catch (error) {
                console.error('Error loading table data:', error);
                tbody.innerHTML = `
                    <tr>
                        <td colspan="${tables[tableId].columns.length + 1}" style="text-align: center; color: red; padding: 20px;">
                            Error loading data. Please try again.
                        </td>
                    </tr>
                `;
            }
        }
        
        // Initialize the page with the assigned table
        document.addEventListener('DOMContentLoaded', function() {
            console.log('DOM fully loaded');
            
            // Initialize sidebar toggle
            const sidebarToggle = document.getElementById('sidebarToggle');
            if (sidebarToggle) {
                sidebarToggle.addEventListener('click', function() {
                    const sidebar = document.querySelector('.sidebar');
                    if (sidebar) {
                        sidebar.classList.toggle('active');
                    }
                });
            }
            
            // Close sidebar when clicking outside on mobile
            document.addEventListener('click', function(e) {
                const sidebar = document.querySelector('.sidebar');
                const sidebarToggle = document.getElementById('sidebarToggle');
                
                if (!sidebar || !sidebarToggle) return;
                
                if (window.innerWidth <= 992 && 
                    !sidebar.contains(e.target) && 
                    e.target !== sidebarToggle && 
                    !sidebarToggle.contains(e.target)) {
                    sidebar.classList.remove('active');
                }
            });
            
            // Load the assigned table after a small delay to ensure DOM is fully ready
            setTimeout(function() {
                console.log('Loading assigned table...');
                try {
                    loadAssignedTable();
                } catch (error) {
                    console.error('Error loading table:', error);
                    const container = document.getElementById('tablesContainer');
                    if (container) {
                        container.innerHTML = `
                            <div class="error-message">
                                <i class="fas fa-exclamation-triangle"></i>
                                <p>Error loading table data. Please try again later.</p>
                            </div>`;
                    }
                }
            }, 100);
            
            // Add beforeunload event listener
            window.addEventListener('beforeunload', function(e) {
                // This is intentionally left empty
            });
        });
    </script>
    
