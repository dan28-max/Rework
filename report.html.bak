        // Save draft data to localStorage
        function saveDraft() {
            try {
                Object.keys(tables).forEach(tableId => {
                    if (tables[tableId] && tables[tableId].data) {
                        const draftKey = `draft_${tableId}_${currentCampus || 'default'}`;
                        localStorage.setItem(draftKey, JSON.stringify(tables[tableId].data));
                    }
                });
                return true;
            } catch (error) {
                console.error('Error saving draft:', error);
                return false;
            }
        }
        
        // Save row data
        function saveRow(tableId, rowIndex) {
            const table = tables[tableId];
            
            // Initialize data array if it doesn't exist
            if (!table.data) {
                table.data = [];
            }
            
            // Create new row data object if it doesn't exist
            if (!table.data[rowIndex]) {
                table.data[rowIndex] = {};
            }
            
            const form = document.getElementById('editForm');
            if (!form) {
                console.error('Form not found');
                return false;
            }
            
            // Get all form fields and update the row data
            const inputs = form.querySelectorAll('input, select, textarea');
            
            // Skip the ID column (index 0) if it exists
            const startIndex = table.columns[0].toLowerCase() === 'id' ? 1 : 0;
            
            // Create an object to store the row data
            const rowData = {};
            
            // First, collect all the data
            inputs.forEach((input, index) => {
                if (input.type === 'button' || input.type === 'submit') return;
                
                const colIndex = index + startIndex;
                if (colIndex >= table.columns.length) return;
                
                const columnName = table.columns[colIndex];
                const value = input.type === 'checkbox' ? input.checked : input.value.trim();
                
                // Store the value using the column name as key
                rowData[columnName] = value;
                
                // Also store by index for backward compatibility
                rowData[colIndex] = value;
            });
            
            // Update the row data in the table
            table.data[rowIndex] = rowData;
            
            // Changes saved
            
            // Close the modal
            closeModal();
            
            // Refresh the table
            showTable(tableId);
            
            // Show success message
            // Notification removed
            
            return false;
        }
        
