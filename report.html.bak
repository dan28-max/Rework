        }
        
        // Function to add inline edit listeners
        function addInlineEditListeners(tableId) {
            // Handle input changes
            document.querySelectorAll(`#${tableId}Table .editable-input`).forEach(input => {
                input.addEventListener('change', function() {
                    const row = this.dataset.row;
                    const col = this.dataset.col;
                    const value = this.value;
                    
                    // Update the data model
                    if (!tables[tableId].data[row]) {
                        tables[tableId].data[row] = {};
                    }
                    tables[tableId].data[row][col] = value;
                    
                    // Changes saved
                });
            });
            
            // Handle select changes
            document.querySelectorAll(`#${tableId}Table .editable-select`).forEach(select => {
                select.addEventListener('change', function() {
                    const row = this.dataset.row;
                    const col = this.dataset.col;
                    const value = this.value;
                    
                    // Update the data model
                    if (!tables[tableId].data[row]) {
                        tables[tableId].data[row] = {};
                    }
                    tables[tableId].data[row][col] = value;
                    
                    // Changes saved
                });
            });
        }
        
        // Save row from inline editing
        function saveRowFromInline(tableId, rowIndex) {
            const rowData = {};
            const row = document.querySelector(`#${tableId}Table tbody tr:nth-child(${rowIndex + 1})`);
            
            if (!row) return;
            
            // Collect data from inputs and selects
            const inputs = row.querySelectorAll('input, select');
            inputs.forEach(input => {
                const col = input.dataset.col;
                rowData[col] = input.value;
            });
            
            // Update the data model
            tables[tableId].data[rowIndex] = rowData;
            
            // Changes saved
            
            // Show success message
            // Notification removed
        }
        
        // Add a new row to the current table
        function addRow(tableId) {
            const tbody = document.getElementById(tableId + 'Body');
            
            // Check for and remove any 'No data available' message
            const noDataRow = tbody.querySelector('tr');
            if (noDataRow && noDataRow.querySelector('td[colspan]')) {
                tbody.innerHTML = '';
            }
            
            // Create a new empty row in the data model
            const newRowIndex = tables[tableId].data.length;
            const newRow = {};
            tables[tableId].columns.forEach(column => {
                // Skip ID and any numbering columns
                const colName = column.toLowerCase();
                if (colName !== 'id' && colName !== 'no' && colName !== '#' && !colName.includes('number')) {
                    newRow[column] = '';
                }
            });
            tables[tableId].data.push(newRow);
            
            // Create the table row
            const row = document.createElement('tr');
            row.setAttribute('data-index', newRowIndex);
            
            // Add cells with editable inputs (skip ID and numbering columns)
            tables[tableId].columns.forEach((column) => {
                const colName = column.toLowerCase();
                // Skip ID and numbering columns
                if (colName === 'id' || colName === 'no' || colName === '#' || colName.includes('number')) {
                    return;
                }
                
                const cell = document.createElement('td');
                const value = newRow[column] || '';
                
                if (colName === 'campus') {
                    const campuses = ['Alangilan', 'Nasugbo', 'Balayan', 'Malvar', 'Lemery', 'Lipa', 'Lobo', 'Mabini', 'Pablo Borbon', 'Rosario', 'San Juan'];
                    cell.innerHTML = `
                        <select class="editable-select" data-row="${newRowIndex}" data-col="${column}">
                            <option value="">-- Select --</option>
                            ${campuses.map(c => 
                                `<option value="${c}" ${value === c ? 'selected' : ''}>${c}</option>`
                            ).join('')}
                        </select>
                    `;
                } 
                else if (colName === 'sex' || colName === 'gender') {
                    cell.innerHTML = `
                        <select class="editable-select" data-row="${newRowIndex}" data-col="${column}">
                            <option value="">-- Select --</option>
                            <option value="Male" ${value === 'Male' ? 'selected' : ''}>Male</option>
                            <option value="Female" ${value === 'Female' ? 'selected' : ''}>Female</option>
                            <option value="Other" ${value === 'Other' ? 'selected' : ''}>Other</option>
                        </select>
                    `;
                }
                else {
                    const isNumber = ['amount', 'quantity', 'count', 'number', 'total', 'students', 'faculty', 'staff', 'visitors', 'cost', 'price', 'qty', 'weight', 'volume'].some(term => 
                        colName.includes(term));
                    const inputType = isNumber ? 'number' : 'text';
                    const inputStep = isNumber ? 'step="0.01"' : '';
                    
                    cell.innerHTML = `
                        <input type="${inputType}" 
                               class="editable-input" 
                               value="${value}" 
                               data-row="${newRowIndex}" 
                               data-col="${column}"
                               ${inputStep}>
                    `;
                }
                
                row.appendChild(cell);
            });
            
            // Add action buttons
            const actionCell = document.createElement('td');
            actionCell.className = 'actions';
            
            const saveBtn = document.createElement('button');
            saveBtn.className = 'btn-save';
            saveBtn.innerHTML = '<i class="fas fa-save"></i>';
            saveBtn.title = 'Save';
            saveBtn.onclick = () => saveRowFromInline(tableId, newRowIndex);
            
            const deleteBtn = document.createElement('button');
            deleteBtn.className = 'btn-delete';
            deleteBtn.innerHTML = '<i class="fas fa-trash"></i>';
            deleteBtn.title = 'Delete';
            deleteBtn.onclick = () => {
                if (confirm('Are you sure you want to delete this row?')) {
                    deleteRow(tableId, newRowIndex);
                }
            };
            
            actionCell.appendChild(saveBtn);
            actionCell.appendChild(deleteBtn);
            row.appendChild(actionCell);
            
            // Add the new row to the table body
            tbody.appendChild(row);
            
            // Update the row count
            updateRowCount(tableId);
            
            // Scroll to the new row
            row.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
            
            // Focus the first input in the new row
            const firstInput = row.querySelector('input, select');
            if (firstInput) {
                setTimeout(() => firstInput.focus(), 100);
            }
            
            // Changes saved
        }
        
        // Edit a row
        function editRow(tableId, rowIndex, isNew = false) {
            const table = tables[tableId];
            if (!table) {
                showToast('Table not found', 'error');
                return;
            }
            
            // Initialize data array if it doesn't exist
            if (!table.data) {
                table.data = [];
            }
            
            // For new rows, create an empty data object
            if (isNew && !table.data[rowIndex]) {
                table.data[rowIndex] = {};
            } else if (!isNew && !table.data[rowIndex]) {
                showToast('Row not found', 'error');
                return;
            }
            
            const rowData = table.data[rowIndex] || {};
            const columns = table.columns;
            
            // Create form HTML
            let formHtml = `
                <form id="editForm" onsubmit="saveRow('${tableId}', ${rowIndex}); return false;">
                    <div class="form-grid">
            `;
            
            // Add form fields for each column (except ID and Actions)
            columns.forEach((column, colIndex) => {
                // Skip ID field (first column) and Actions column (last column)
                if (colIndex === 0 || colIndex >= columns.length - 1) return;
                
                // Get the column name (handle both string and object formats)
                const columnName = typeof column === 'object' ? (column.title || column) : column;
                
                // Skip if column name is not valid
                if (!columnName) return;
                
                // Get the value from rowData, first try by column name, then by index
                const value = rowData[columnName] || rowData[colIndex] || '';
                const fieldId = `${tableId}_${colIndex}_${Date.now()}`;
                const fieldName = columnName.toLowerCase().replace(/\s+/g, '_');
                const labelId = `label_${fieldId}`;
                let inputField = '';
                const columnNameLower = String(columnName).toLowerCase();
                
                // Add label for the form field
                formHtml += `
